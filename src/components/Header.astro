---
import NavBar from "./NavBar.astro";
import { Image } from "astro:assets";
import logo from "../assets/icons/logo.svg";
import bus from "../assets/videos/bus.mp4";
---

<header>
  <div
    class="z-20 w-full bg-white py-0 flex justify-between items-center shadow-2xl px-10 text-black"
  >
    <div class="w-20 h-20 py-2">
      <Image src={logo} alt={"logo"} class={"w-full h-full"} />
    </div>
    <NavBar />
  </div>
  <div class="video-container z-10">
    <video width="100%" height="100%" autoplay loop muted>
      <source src={bus} type="video/mp4" />
    </video>
    <div class="top-0 bg-gray-800 opacity-75 w-screen h-[500px]"></div>
  </div>
</header>

<style>
  .video-container {
    position: relative;
    top: 0px;
    bottom: 0;
    width: 100%;
    height: 500px;
    overflow: hidden;
  }
  .video-container video {
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
</style>
